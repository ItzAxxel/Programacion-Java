import java.util.Scanner;

public class AxelArroyoGimenezNumeroHabitantes20 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * Algorisme que llegeixi el número d’habitants de 20 poblacions i 
		 * mostri el percentatge (sobre el total d’habitants) d’habitants que 
		 * pertanyin a: 
		 * Una població petita (menys de 2.000 habitants). 
		 * Una població mitja (entre 2.000 i 300.000 habitants). 
		 * Una població gran (més de 300.000 habitants).
		 * 
		 */
		
		//Creamos el scanner
		Scanner teclado = new Scanner(System.in);
		
		//Creamos las variables
		int habitantesUsuario = 0;
		int poblacionChiquita = 0;
		int poblacionMedia = 0;
		int poblacionGrande = 0; 
		
		System.out.println("Introduce una cantidad de habitantes: ");
		habitantesUsuario = teclado.nextInt();
		
		for (int i = 0; i > 20; i++) {
			if(habitantesUsuario < 2000) {
				habitantesUsuario = (habitantesUsuario * 100) / 100;
				System.out.println("Es una ciudad chiquita con: " + habitantesUsuario + " porcentaje");
			}
			
		}
		
	}

}
