import java.util.Scanner;

public class AxelArroyoGimenezEjercicioNumerosHastaNegativoo {
	public static void main(String[] args) {
		
		/*
		 * Algorisme que demani números fins a que s’introdueixi un negatiu, 
		 * aleshores s’ha d’indicar quants números s’han introduït. 
		 * 
		 */
		
		//Creamos el Scanner
		Scanner teclado = new Scanner(System.in);
		
		//Creamos la variable
		int numero = 0;
		int comprobante= 0;
		
		//Pedimos al usuario que introduzca el numero
		System.out.println("Introduce un numero: ");
		numero = teclado.nextInt();
		
		for(comprobante = 0; numero > 0; comprobante++) {
			System.out.println("Introduce otro número: ");
			numero = teclado.nextInt();
		}
		System.out.println("Se han puesto: "+ comprobante + " numeros");
	}
}
