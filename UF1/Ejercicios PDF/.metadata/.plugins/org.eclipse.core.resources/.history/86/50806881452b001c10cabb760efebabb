
public class AxelArroyoGimenezEjercicioNumerosParejosEntre2y30 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * Algorisme que mostri els números parells entre 2 i 30.
		 * 
		 */

		// Creamos las variables
		int numeroA = 0;
		int numeroB = 31;
		int numero = 0;

		numero = numeroA *2;

		System.out.println("Los números entre 1 y 30 son: ");
		while (numeroA < numero && numeroB > numero) {
			System.out.println(numero);
			numero++;
		}

	}

}
