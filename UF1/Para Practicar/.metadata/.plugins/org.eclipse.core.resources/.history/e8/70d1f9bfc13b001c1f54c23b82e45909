import java.util.Scanner;
import java.util.Random;

public class AxelArroyoGimenez_ThreeStonesGamming_Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Creamos el Scanner
		Scanner teclado = new Scanner(System.in);

		// Creamos la variable de random
		Random randomApuestaIA = new Random();
		Random randomElecionIA = new Random();

		// Creamos las variables necesarias
		int elecionUsuario = 0;
		int elecionIA = 0;
		int apuestaUsuario = 0;
		int apuestaIA = 0;
		int numeroRondas = 0;
		int rondaActual = 0;
		int puntosUsuario = 0;
		int puntosIA = 0;
		int resultado = 0;
		int resultadoUsuario = 0;
		int resultadoIA = 0;
		int jugarDeNuevo = 0;

		// Explicamos de que va el programa
		System.out.println("¬°Bienvenidx! Este programa est√° hecho para jugar al juego de las piedras.\n");
		System.out.println(
				"El juego funciona de la siguiente manera: Hay dos jugadores, el usuario y el ordenador. \nCada usuario tiene 3 piedras, y coge 0, 1, 2 o 3 en cada turno. \nEntonces, sin ver las del otro, debe decirse un n√∫mero al azar para acertar el total de piedras.");
		System.out.println("\nIntroduce el n√∫mero de rondas que quieras jugar: ");
		numeroRondas = teclado.nextInt();
		System.out.println("\n");

		while (jugarDeNuevo != 0) {

			for (int i = 0; i < numeroRondas; i++) {
				rondaActual++;

				System.out.println("Inicio de la ronda " + rondaActual);

				System.out.println("¬øCuantas piedras quieres apostar? Recueda que solo puedes apostar 3!");
				elecionUsuario = teclado.nextInt();
				System.out.println("¬øCual crees que ser√° el resultado de la suma?");
				apuestaUsuario = teclado.nextInt();

				elecionIA = randomElecionIA.nextInt(4);

				if (elecionIA == 4) {
					elecionIA = 3;
				}

				apuestaIA = randomApuestaIA.nextInt(4);

				if (apuestaIA == 0) {
					apuestaIA = 1;
				}
				
				if (apuestaIA == 4) {
					apuestaIA = 3;
				}

				System.out.println("La IA ha apostado: " + elecionIA);
				System.out.println("La IA cree que el resultado de la suma ser√°: " + apuestaIA);

				resultado = apuestaUsuario + apuestaIA;

				System.out.println("El resultado es: " + apuestaUsuario + " (Apuesta del usuario)" + " + " + apuestaIA
						+ " (Apuesta de la IA)" + " = " + resultado );

				// GANA IA
				if (resultado != apuestaUsuario && resultado == apuestaIA) {
					System.out.println("La IA ha ganado esta ronda!");
					puntosIA++;
				}
				// GANA USUARIO
				if (resultado == resultadoUsuario && resultado != apuestaIA) {
					System.out.println("Has ganado esta ronda!");
					puntosUsuario++;
				}

				// EMPATE
				if (resultado == resultadoUsuario && resultado == apuestaIA) {
					System.out.println("Ambos jugadores han quedado en empate. ¬°Nadie gana puntos!");
				}

				// DIFERENTE
				if (resultado != resultadoUsuario && resultado != apuestaIA) {
					System.out.println("Ninguno ha hacertado! Nadie gana puntos esta ronda.");
				}

				// Mostramos el ganador de la ronda
				if (puntosUsuario > puntosIA) {
					System.out.println("Has ganado tu con: " + puntosUsuario + " punto(s)");
				} else if (puntosIA > puntosUsuario) {
					System.out.println("Ha ganado la IA con: " + puntosIA + " punto(s)");
				}

				System.out.println("øQuieres jugar de nuevo?");
				System.out.println("Si [9] | No [0]");
				jugarDeNuevo = teclado.nextInt();

			}

		}

		// Cerramos el teclado
		teclado.close();
	}

}
