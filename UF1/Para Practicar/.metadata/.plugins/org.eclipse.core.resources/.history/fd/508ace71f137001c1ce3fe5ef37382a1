import java.util.Random;
import java.util.Scanner;

public class AxelArroyoGimenez_Canicas_Main {

	public static void main(String[] args) {
		  // TODO Auto-generated method stub

        // Creamos el scanner
        Scanner teclado = new Scanner(System.in);

        // Creamos las variables necesarias
        int par = 0;
        int impar = 0;
        int resultado = 0;
        int canicas = 0;
        int elecionUsuario = 0;
        int apuestaUsuario = 0;
        int elecionIA = 0;

        // Creamos la variable de random
        Random IA = new Random(0);
        elecionIA = IA.nextInt(11);

        // Decimos de que va el programa
        System.out.println(
                "¡Bienvenidx! Este programa esta creado para jugar al juego de las canicas.\n¿Con que vas a jugar?");
        System.out.println("Par [1] | Impar [2]");
        elecionUsuario = teclado.nextInt();

        if (elecionIA == 0) {
            elecionIA = 1;
        } else if (elecionIA == 11) {
            elecionIA = 10;
        }

        if (elecionUsuario == 1) {
            elecionIA = 2;
            System.out.println("Has elegido jugar con: PAR");
            System.out.println("La IA jugara con: IMPAR");
            System.out.println("¿Cual sera tu apuesta?");
            apuestaUsuario = teclado.nextInt();
            elecionIA = IA.nextInt(11);
            System.out.println("La IA ha jugado con: " + elecionIA);
        } else {
            elecionIA = 1;
            System.out.println("Has elegido jugar con: IMPAR");
            System.out.println("La IA jugara con: PAR");
            System.out.println("¿Cual sera tu apuesta?");
            apuestaUsuario = teclado.nextInt();
            elecionIA = IA.nextInt(11);
            System.out.println("La IA ha jugado con: " + elecionIA);
        }

        resultado = apuestaUsuario + elecionIA;
        resultado = elecionUsuario + elecionIA;
        resultado = par;
        resultado = impar;
        System.out.println("El resultado de la ronda es "+ resultado);
        if (par % 2 == 0) {
            if (elecionUsuario == 1) {
                System.out.println(" la suma es par! Ganas esta ronda.");
            } else if (elecionUsuario == 2) {
                System.out.println("la suma es par! La IA gana esta ronda");
            }
        } else {
            if (elecionUsuario == 2) {
                System.out.println("El resultado de la ronda es: " + par + " la suma es impar! Ganas esta ronda.");
            } else if (elecionUsuario == 1) {
                System.out
                        .println("El resultado de la ronda es: " + par+ " la suma es impar! La IA gana esta ronda");
            }

        }

        System.out.println("Resumen de puntuaciones: " + apuestaUsuario);
        System.out.println("El jugador tiene: " + " canicas");
        System.out.println("La IA tiene: " + " canicas");
    }

}

}
