import java.util.Random;
import java.util.Scanner;

public class AxelArroyoGimenez_Canicas_Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Creamos el scanner
		Scanner teclado = new Scanner(System.in);

		// Creamos las variables necesarias
		int elecionUsuario = 0;
		int elecionIA = 0;
		int canicasUsuario = 0;
		int canicasIA = 0;
		int resultadoOperacion = 0;
		int minimoCanicas = 0;
		int numeroRondas = 0;
		int puntuacionUsuario = 10;
		int puntuacionIA = 10;
		int totalPuntuacionUsuario = 0;
		int totalPuntuacionIA = 0;

		// Creamos la variable de random
		Random IA = new Random(0);

		// Decimos de que va el programa
		System.out.println("¡Bienvenidx al juego de las canicas!");

		while (totalPuntuacionUsuario != 20 || totalPuntuacionIA != 20) {
			numeroRondas++;

			System.out.println("RONDA: " + numeroRondas);
			System.out.println("¿Con que vas a jugar?");
			System.out.println("Par [1] || Impar [2]");
			elecionUsuario = teclado.nextInt();

			if (elecionUsuario == 1) {
				System.out.println("Has elegido jugar con: PAR! \n¿Cual sera tu apuesta?");
				canicasUsuario = teclado.nextInt();
			} else if (elecionUsuario == 2){
				System.out.println("Has elegido jugar con: IMPAR! \n¿Cual sera tu apuesta?");
				canicasUsuario = teclado.nextInt();
			}
			
			if (elecionUsuario == 1) {
				elecionIA = 2;
			} else {
				elecionIA = 1;
			}
			
			canicasIA = IA.nextInt(11);
			
			if (canicasIA == 0) {
				canicasIA = 1;
			}
			
			if(elecionIA == 1) {
				System.out.println("La IA jugara con: PAR! y apostara: " + canicasIA + " canicas");
			} else {
				System.out.println("La IA jugara con: IMPAR y apostara: " + canicasIA + " canicas");
			}
			
			resultadoOperacion = canicasUsuario + canicasIA;
			
			
		}
	}

}
