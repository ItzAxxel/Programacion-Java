//Axel Arroyo Giménez

import java.util.Random;
import java.util.Scanner;

public class AxelArroyoGimenez_Canicas_Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Creamos el scanner
		Scanner teclado = new Scanner(System.in);

		// Creamos las variables necesarias

		int resultado = 0;
		int minimoCanicas = 0;
		int elecionUsuario = 0;
		int apuestaUsuario = 10;
		int apuestaIA = 10;
		int totalCanicasUsuario = 0;
		int totalCanicasIA = 0;
		int elecionIA = 0;

		// Creamos la variable de random
		Random IA = new Random(0);
		elecionIA = IA.nextInt(11);

		while (totalCanicasUsuario != 20 || totalCanicasIA != 20) {
			// Decimos de que va el programa
			System.out.println(
					"¡Bienvenidx! Este programa esta creado para jugar al juego de las canicas.\n¿Con que vas a jugar?");
			System.out.println("Par [1] | Impar [2]");
			elecionUsuario = teclado.nextInt();

			if (elecionIA == 0) {
				elecionIA = 1;
			} else if (elecionIA == 11) {
				elecionIA = 10;
			}

			if (elecionUsuario == 1) {
				elecionIA = 2;
				System.out.println("Has elegido jugar con: PAR");
				System.out.println("La IA jugara con: IMPAR");
				System.out.println("¿Cual sera tu apuesta?");
				apuestaUsuario = teclado.nextInt();
				apuestaIA = IA.nextInt(11);
				System.out.println("La IA ha jugado con: " + apuestaIA + " canicas");
			} else {
				elecionIA = 1;
				System.out.println("Has elegido jugar con: IMPAR");
				System.out.println("La IA jugara con: PAR");
				System.out.println("¿Cual sera tu apuesta?");
				apuestaUsuario = teclado.nextInt();
				elecionIA = IA.nextInt(11);
				System.out.println("La IA ha jugado con: " + apuestaIA + " canicas");
			}

			resultado = apuestaUsuario + apuestaIA;

			if (apuestaUsuario < apuestaIA) {
				minimoCanicas = apuestaUsuario;
			} else if (apuestaUsuario > apuestaIA) {
				minimoCanicas = apuestaIA;
			}

			if (resultado % 2 == 0 && apuestaUsuario == 1 && apuestaIA == 2) {
				System.out.println(
						"Resultado de la ronda: " + resultado + " es par! El jugador consigue:  " + minimoCanicas);
				totalCanicasUsuario = apuestaUsuario + minimoCanicas;
				System.out.println("Resumen puntuaciones: " + totalCanicasUsuario);
			}
			if (resultado % 2 == 0 && apuestaUsuario == 2 && apuestaIA == 1) {
				System.out
						.println("Resultado de la ronda: " + resultado + " es par! La IA consigue:  " + minimoCanicas);
				totalCanicasIA = apuestaIA + minimoCanicas;
			}
			if (resultado % 2 != 0 && apuestaUsuario == 1 && apuestaIA == 2) {
				System.out
						.println("Resultado de la ronda: " + resultado + " es impar LA IA consigue:  " + minimoCanicas);
				totalCanicasIA = apuestaIA + minimoCanicas;
			}
			if (resultado % 2 != 0 && apuestaUsuario == 2 && apuestaIA == 1) {
				System.out.println(
						"Resultado de la ronda: " + resultado + " es impar el jugador consigue:  " + minimoCanicas);
				totalCanicasUsuario = apuestaUsuario + minimoCanicas;
			}
		}

	}

}