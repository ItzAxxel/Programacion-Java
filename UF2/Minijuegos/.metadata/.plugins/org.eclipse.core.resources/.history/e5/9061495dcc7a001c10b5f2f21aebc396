//Programa hecho por Axel y Siru

import java.util.Random;
import java.util.Scanner;

public class Minijuegos {

	static Scanner teclado = new Scanner(System.in);

	public static void main(String[] args) {

		/*
		 * Adivina el numero y Combate
		 * 
		 */

		menu();

	}

	public static int menu() {

		boolean salir = false;
		int opcion = 0;// Guardaremos la opcion del usuario

		while (!salir) {
			System.out.println(" Elige una opción: ");
			System.out.println();
			System.out.println(" 1.- Jugar");
			System.out.println(" 2.- Informaciónn");
			System.out.println(" 3.- Mostrar puntuaciones");
			System.out.println(" 4.- Autores");
			System.out.println(" 5.- Versión");
			System.out.println(" 6.- Salir");
			opcion = teclado.nextInt();
			if (opcion == 1) {
				elegirJuego();
			}
			if (opcion == 2) {
				System.out.println(
						"------------------------------------ Adivina el número ------------------------------");
				System.out.println(
						"En este minijuego, deberás adivinar 3 veces el número aleatorio para ganar la partida");
				System.out.println(
						"----------------------------------------------------------------------------------------");
				menu();
			}
			if (opcion == 3) {
				System.out.println("ª");
				System.out.println();
				menu();
			}
			if (opcion == 4) {
				System.out.println("Axel y Siru");
				System.out.println();
				menu();
			}
			if (opcion == 5) {
				System.out.println("1.0.0");
				System.out.println();
				menu();
			}
			if (opcion == 6) {
				salir = true;
			}
		}
		return opcion;
	}

	public static int elegirJuego() {
		int opcionJuego = 0;

		System.out.println(" Disponemos de dos juegos actualmente, ¿Cual quieres jugar?");
		System.out.println(" 1.- Adivina el número ");
		System.out.println(" 2.- Combate ");
		System.out.println(" 3.- Volver al menú principal");
		opcionJuego = teclado.nextInt();
		if (opcionJuego == 1) {
			modoDeJuego();
			adivinaElNumeroIA(opcionJuego, opcionJuego, opcionJuego, opcionJuego, opcionJuego, opcionJuego);
		}
		if (opcionJuego == 2) {
			modoDeJuego();

		}
		if (opcionJuego == 3) {
			menu();
		}
		return opcionJuego;

	}

	public static int modoDeJuego() {
		int elecionModoDeJuego = 0;
		System.out.println(" Ahora debes elegir el modo de juego: ");
		System.out.println(" 1.- Jugador contra jugador ");
		System.out.println(" 2.- Jugador contra IA");
		System.out.println(" 3.- Volver al menú principal");
		elecionModoDeJuego = teclado.nextInt();
		if (elecionModoDeJuego == 1) {
			adivinaElNumeroJugadorContraJugador();

		}
		if (elecionModoDeJuego == 2) {
			adivinaElNumeroIA(elecionModoDeJuego, elecionModoDeJuego, elecionModoDeJuego, elecionModoDeJuego,
					elecionModoDeJuego, elecionModoDeJuego);
		}
		if (elecionModoDeJuego == 3) {
			menu();
		}

		return elecionModoDeJuego;
	}

	public static void adivinaElNumeroJugadorContraJugador() {

	}

	public static void adivinaElNumeroIA(int numeroUsuario, int numeroAleatorio, int IA, int contadorRonda,
			int puntuacionUsuario, int puntuacionIA) {
		Random rand = new Random();
		System.out.println(
				"Este juego es al mejor de tres. Cuando uno de los dos jugadores gane 3 veces, será el vencedor.");

		numeroAleatorio = rand.nextInt(10) + 1;
		while (numeroUsuario != numeroAleatorio && IA != numeroAleatorio) {
			numeroUsuario = 0;
			IA = 0;
			numeroAleatorio = rand.nextInt(10) + 1;
			System.out.println(numeroAleatorio + " numero aleatorio probar");

			System.out.println("Estas en la ronda: " + contadorRonda);
			System.out.println("Elige un número del 1 al 10: ");
			numeroUsuario = teclado.nextInt();

			System.out.println();
			System.out.println("La IA está eligiendo número...");
			elecionNumeroIA(IA);
			System.out.println("Ha elegido el número " + IA);

			contadorRonda++;
			puntuacionUsuario(numeroUsuario, numeroAleatorio);
			puntuacionIA(IA, numeroAleatorio);
			ganadorPartida(puntuacionUsuario, puntuacionIA);

		}
	}

	public static int elecionNumeroIA(int IA) {
		Random rand = new Random();
		try {
			// Ponemos a "Dormir" el programa durante los ms que queremos
			Thread.sleep(2000);
			IA = rand.nextInt(10) + 1;
		} catch (Exception e) {
			System.out.println(e);
		}
		return IA;
	}

	public static int puntuacionUsuario(int numeroUsuario, int numeroAleatorio) {
		int puntuacionUsuario = 0;
		if (numeroUsuario == numeroAleatorio) {
			System.out.println("¡Has ganado la ronda!");
			puntuacionUsuario++;
		}

		return puntuacionUsuario;
	}

	public static int puntuacionIA(int IA, int numeroAleatorio) {
		int puntuacionIA = 0;
		if (IA == numeroAleatorio) {
			System.out.println("¡La IA ha ganado la ronda!");
			puntuacionIA++;
		}

		return puntuacionIA;
	}

	public static void ganadorPartida(int puntuacionUsuario, int puntuacionIA) {

		if (puntuacionUsuario == 3) {
			System.out.println("¡Has ganado la partida, felicidades!");
		}

		if (puntuacionIA == 3) {
			System.out.println("La IA ha ganado la partida!");
		}

	}

}
